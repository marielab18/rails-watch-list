<div class="list-container bg-dark py-3" >
  <div class="list-banner text-center">
    <h1><%= @list.name %></h1>
  </div>
  <div class= "text-end mx-3">
    <%= link_to "Add a new movie", new_list_bookmark_path(@list), class: "btn btn-light" %>
  </div>


<div class="d-flex justify-content-around my-3">

  <% @list.movies.each do |movie| %>
   <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
    <div class="card" style="width: 18rem;">
      <img class="card-img-top"><%= image_tag movie.poster_url, alt: movie.title, class: "movie-img rounded-top" %>
      <div class="card-body">
        <h5 class="card-title"><%= movie.title %></h5>
        <p>⭐️ <%= movie.rating %></p>
        <p class="card-text"><%= movie.overview %></p>
         <%= link_to "Deleting", bookmark_path(bookmark), method: :delete, class: "btn btn-ghost" %>
      </div>
    </div>
  <% end %>
</div>
  <%= link_to "Back to list", root_path, class: "btn btn-ghost" %>



</div>
